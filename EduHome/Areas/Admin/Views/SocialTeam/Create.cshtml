@model EduHome.Models.SocialTeam
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="user" method="post" enctype="multipart/form-data">


    <div class="form-group">
        <label>Teachers</label>
        <select class="form-control" name="TeacherId">
            <option value="value">Choose</option>
            @foreach (var item in ViewBag.Teachers)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Icon)
        @Html.TextAreaFor(m => m.Icon, new { @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(m => m.Icon, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Link)
        @Html.TextAreaFor(m => m.Link, new { @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(m => m.Link, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextAreaFor(m => m.Name, new { @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>


    <input type="hidden" name="CreatedDate" value="@DateTime.Now" />

    <button class="btn btn-primary btn-user btn-block">Create</button>
</form>



