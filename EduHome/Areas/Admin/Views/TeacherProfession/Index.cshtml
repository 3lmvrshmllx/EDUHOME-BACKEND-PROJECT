@model List<EduHome.Models.TeacherProfession>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }

    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Teacher Profession</h1>
        <div class="row">
            <div class="col-lg-12">
                <a href="@Url.Action("Create", "TeacherProfession")" class="btn btn-primary mb-4">Create</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Created Date</th>
                                <th>Edits</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>

                                    <td>@item.Name</td>
                                    <td>@item.CreatedDate</td>

                                    <td>
                                        <a href="@Url.Action("Update", "TeacherProfession", new { id=item.Id})">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <a onclick="return confirm('Are you sure?')" href="@Url.Action("Delete", "TeacherProfession", new { id=item.Id})">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

