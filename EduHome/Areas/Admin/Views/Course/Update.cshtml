        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CourseFee)
            @Html.TextAreaFor(m => m.CourseFee, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.CourseFee, null, new { @class = "text-danger" })
        </div>



        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="Image" value="@Model.Image" />
        <input type="hidden" name="CreatedDate" value="@DateTime.Now" />

        <button class="btn btn-primary btn-user btn-block">Update</button>
    </form>


