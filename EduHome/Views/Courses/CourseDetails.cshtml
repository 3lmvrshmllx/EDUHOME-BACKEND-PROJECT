@model EduHome.ViewModels.ViewModelEduhome



<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(../../Uploads/img/@Model.BgImage.Image)">

        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img style="width:770px;height:410px" src="~/Uploads/img/@Model.Course.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Course.Title</h2>
                        <p>@Model.Course.Content</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.Course.AboutCourse</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.Course.HowToApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.Course.Certification</p>
                                <p></p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.Course.Starts</span></li>
                                <li>duration <span>@Model.Course.Duration</span></li>
                                <li>class duration <span>@Model.Course.ClassDuration</span></li>
                                <li>skill level <span>@Model.Course.SkillLevel</span></li>
                                <li>language <span>@Model.Course.Language</span></li>
                                <li>students <span>@Model.Course.StudentsCount</span></li>
                                <li>assesments <span>@Model.Course.Assessments</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.Course.CourseFee</h3>
                        </div>
                    </div>


                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form action="@Url.Action("Message","Courses", new { id=@Model.Course.Id})" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Message</p>
                                    <textarea name="message" id="message" cols="15" rows="10" required></textarea>
                                </div>

                                @Html.HiddenFor(c => c.Course.Id)

                            </div>

                            <button class="reply-btn" type="submit"><span>send message</span></button>

                            @if (Session["SuccessfullComment"] != null)
                            {
                                Session["SuccessfullComment"] = null;

                                <div style="margin-top:10px" class="alert alert-success">
                                    <p>Message sent successfully!</p>
                                </div>
                            }

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in Model.CourseCategories)
                            {
                                <li><a href="@Url.Action("Index","Courses")">@item.Name (@item.Courses.Count)</a></li>
                            }
                        </ul>
                    </div>

                    @{
                        Html.RenderPartial("_BestEducation");
                     }
                </div>
            </div>           
        </div>
    </div>
</div>


