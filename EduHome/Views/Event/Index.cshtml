@model EduHome.ViewModels.ViewModelEduhome
@{
    ViewBag.Title = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(../../Uploads/img/@Model.BgImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="blog-area event-area three text-center pt-150 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @foreach (var item in Model.Events)
                    {
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="single-event mb-60">
                                <div class="event-img">
                                    <a href="@Url.Action("EventDetails","Event",new { id=item.Id })">
                                        <img src="~/Uploads/img/@item.Image" alt="event" style="width:370px; height:250px">
                                        <div class="course-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                    <div class="event-date">
                                        <h3>@item.CreatedDate.Day.ToString("00") <span>@item.CreatedDate.ToString("MMM")</span></h3>
                                    </div>
                                </div>
                                <div class="event-content text-left">
                                    <h4><a href="@Url.Action("EventDetails","Event",new { id=item.Id })">@item.Title</a></h4>
                                    <ul>
                                        <li><span>time:</span> @item.Time</li>
                                        <li><span>venue:</span> @item.Venue</li>
                                    </ul>
                                    <div class="event-content-right">
                                        <a class="default-btn" href="@Url.Action("EventDetails","Event",new { id=item.Id })">join now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right text-left">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in Model.EventCategories)
                            {
                            <li><a href="@Url.Action("Index","Event")">@item.Name (@item.Events.Count)</a></li>
                            }
                        </ul>
                    </div>
                   
                    @{
                        Html.RenderPartial("_BestEducation");
                     }
                </div>
            </div>
        </div>
    </div>
</div>




