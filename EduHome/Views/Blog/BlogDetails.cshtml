@model EduHome.ViewModels.ViewModelEduhome


<div class="banner-area-wrapper">
    <div class="banner-area text-center"  style="background-image:url(../../Uploads/img/@Model.BgImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/Uploads/img/@Model.Blog.Image" alt="blog-details" style="width:767px;height:367px">
                    </div>
                    <div class="blog-details-content">
                        <h2>I must explain to you how all this a mistaken idea </h2>
                        <h6>By @Model.Blog.Admin.Name  /  @Model.Blog.CreatedDate.ToLongDateString()  /  <i class="fa fa-comments-o"></i> @(Model.BlogComments.Count() > 0 ? Model.BlogComments.Count() : 0)</h6>
                        <p>@Html.Raw(HttpUtility.HtmlDecode(Model.Blog.Content))</p>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>

                        <form action="@Url.Action("Message","Blog",new {id=@Model.Blog.Id })" method="post">
                            <div class="row">

                                <div class="col-md-12">
                                    <p>Message</p>
                                    <textarea name="message" id="message" cols="15" rows="10" required></textarea>
                                </div>

                                @Html.HiddenFor(m=>m.Blog.Id)
                          
                            </div>
                            <button class="reply-btn" type="submit"><span>send message</span></button>

                            @if (Session["SuccessfullMessage"] != null)
                            {
                                Session["SuccessfullMessage"] = null;

                                <div style="margin-top:10px" class="alert alert-success">
                                    Message sent successfully!
                                </div>
                            }


                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-47">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in Model.BlogCategories)
                            {
                                <li><a href="@Url.Action("Index","Blogs")">@item.Name (@item.Blogs.Count)</a></li>
                            }
                        </ul>
                    </div>     
                    @{
                        Html.RenderPartial("_BestEducation");
                     }
                </div>
            </div>
        </div>
    </div>
</div>


