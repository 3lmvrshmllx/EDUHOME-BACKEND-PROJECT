@model EduHome.ViewModels.ViewModelEduhome
@{
    ViewBag.Title = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(../../Uploads/img/@Model.BgImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="form-group">

                                    @Html.TextBoxFor(m => m.UserRegister.Name, null, new { @class = "form-control", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.UserRegister.Name, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserRegister.Surname, null, new { @class = "form-control", @placeholder = "Surname" })
                                    @Html.ValidationMessageFor(m => m.UserRegister.Surname, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserRegister.Email, null, new { @class = "form-control", @placeholder = "Email", @type = "email" })
                                    @Html.ValidationMessageFor(m => m.UserRegister.Email, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserRegister.PhoneNumber, null, new { @class = "form-control", @placeholder = "Phone number" })
                                    @Html.ValidationMessageFor(m => m.UserRegister.PhoneNumber, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserRegister.Username, null, new { @class = "form-control", @placeholder = "Username" })
                                    @Html.ValidationMessageFor(m => m.UserRegister.Username, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserRegister.Password, null, new { @class = "form-control", @placeholder = "Password" ,@type="password"})
                                    @Html.ValidationMessageFor(m => m.UserRegister.Password, null, new { @class = "text-danger" })
                                </div>
                              
                                <button type="submit" class="default-btn">sign up</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

